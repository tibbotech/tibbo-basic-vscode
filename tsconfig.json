{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
        "target": "es2015",
        "strict": true,
        "outDir": "./out",
        "preserveConstEnums": true,
        "removeComments": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*-spec.ts"
    ]
}